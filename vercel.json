{
    "version": 2,
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "backend/utils/**",
            "backend/routes/**",
            "backend/services/**"
          ],
          "nodeVersion": "18.x"
        }
      },
      {
        "src": "project/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "admin/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "css/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "js/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "images/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/server.js"
      },
      {
        "src": "/admin/(.*)",
        "dest": "/admin/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/project/$1"
      }
    ],
    "github": {
      "silent": true,
      "autoJobCancellation": false
    }
  }