{
    "version": 2,
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node",
        "config": {
          "nodeVersion": "18.x"
        }
      },
      {
        "src": "project/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "admin/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "css/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "js/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "images/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/server.js"
      },
      {
        "src": "/css/(.*)",
        "dest": "/css/$1",
        "headers": {
          "Cache-Control": "public, max-age=86400",
          "Content-Type": "text/css"
        }
      },
      {
        "src": "/js/(.*)",
        "dest": "/js/$1"
      },
      {
        "src": "/images/(.*)",
        "dest": "/images/$1"
      },
      {
        "src": "/(es|zh)/about",
        "dest": "/project/about.html?lang=$1"
      },
      {
        "src": "/(es|zh)/contact",
        "dest": "/project/contact.html?lang=$1"
      },
      {
        "src": "/(es|zh)/estimate",
        "dest": "/project/estimate.html?lang=$1"
      },
      {
        "src": "/(es|zh)",
        "dest": "/project/index.html?lang=$1"
      },
      {
        "src": "/about",
        "dest": "/about.html"
      },
      {
        "src": "/contact",
        "dest": "/contact.html"
      },
      {
        "src": "/estimate",
        "dest": "/estimate.html"
      },
      {
        "src": "/admin/login",
        "dest": "/login.html"
      },
      {
        "src": "/admin/submissions",
        "dest": "/submissions.html"
      },
      {
        "src": "/admin/settings",
        "dest": "/admin-settings.html"
      },
      {
        "src": "/admin/contacts",
        "dest": "/contacts.html"
      },
      {
        "src": "/admin/estimates",
        "dest": "/estimates.html"
      },
      {
        "src": "/",
        "dest": "/index.html"
      },
      {
        "src": "/(.*)",
        "dest": "/404.html",
        "status": 404
      }
    ],
    "rewrites": [
      {
        "source": "/about.html",
        "destination": "/project/about.html"
      },
      {
        "source": "/contact.html",
        "destination": "/project/contact.html"
      },
      {
        "source": "/estimate.html",
        "destination": "/project/estimate.html"
      },
      {
        "source": "/index.html",
        "destination": "/project/index.html"
      },
      {
        "source": "/404.html",
        "destination": "/project/404.html"
      },
      {
        "source": "/login.html",
        "destination": "/admin/login.html"
      },
      {
        "source": "/submissions.html",
        "destination": "/admin/submissions.html"
      },
      {
        "source": "/admin-settings.html",
        "destination": "/admin/admin-settings.html"
      },
      {
        "source": "/contacts.html",
        "destination": "/admin/contacts.html"
      },
      {
        "source": "/estimates.html",
        "destination": "/admin/estimates.html"
      }
    ],
    "github": {
      "silent": true
    }
  }