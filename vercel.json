{
    "version": 2,
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node",
        "config": {
          "nodeVersion": "18.x"
        }
      },
      {
        "src": "project/**/*.html",
        "use": "@vercel/static"
      },
      {
        "src": "admin/**/*.html",
        "use": "@vercel/static"
      },
      {
        "src": "css/**/*.css",
        "use": "@vercel/static"
      },
      {
        "src": "js/**/*.js",
        "use": "@vercel/static"
      },
      {
        "src": "images/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/server.js"
      },
      {
        "src": "/admin/login",
        "dest": "/admin/login.html"
      },
      {
        "src": "/admin/settings",
        "dest": "/admin/admin-settings.html"
      },
      {
        "src": "/admin/contacts",
        "dest": "/admin/contacts.html"
      },
      {
        "src": "/admin/estimates",
        "dest": "/admin/estimates.html"
      },
      {
        "src": "/admin/submissions",
        "dest": "/admin/submissions.html"
      },
      {
        "src": "/about",
        "dest": "/project/about.html"
      },
      {
        "src": "/contact",
        "dest": "/project/contact.html"
      },
      {
        "src": "/estimate",
        "dest": "/project/estimate.html"
      },
      {
        "src": "/css/(.*)",
        "dest": "/css/$1",
        "headers": {
          "Cache-Control": "public, max-age=31536000"
        }
      },
      {
        "src": "/js/(.*)",
        "dest": "/js/$1"
      },
      {
        "src": "/images/(.*)",
        "dest": "/images/$1"
      },
      {
        "src": "/",
        "dest": "/project/index.html"
      },
      {
        "src": "/(.*)",
        "dest": "/project/404.html",
        "status": 404
      }
    ],
    "github": {
      "silent": true,
      "autoJobCancelation": false
    }
  }